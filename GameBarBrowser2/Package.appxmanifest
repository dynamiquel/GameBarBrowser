      <Extensions>
        <uap3:Extension Category="windows.appExtension">
          <uap3:AppExtension Name="microsoft.gameBarUIExtension"
                             Id="GameBarBrowser"
                             DisplayName="Browser"
                             Description="Surf the web."
                             PublicFolder="GameBar">
            <uap3:Properties>
              <GameBarWidget Type="Standard">
                <HomeMenuVisible>true</HomeMenuVisible>
                <PinningSupported>true</PinningSupported>
                <ActivateAfterInstalled>true</ActivateAfterInstalled>
                <SettingsSupported AppExtensionId="GameBarBrowserSettings"/>
                <Window>    
                  <Size>
                    <Height>720</Height>
                    <Width>1280</Width>
                    <MinHeight>4</MinHeight>
                    <MinWidth>4</MinWidth>
                    <MaxHeight>Infinite</MaxHeight>
                    <MaxWidth>Infinite</MaxWidth>
                  </Size>
                  <ResizeSupported>
                    <Horizontal>true</Horizontal>
                    <Vertical>true</Vertical>
                  </ResizeSupported>
                </Window>
              </GameBarWidget>
            </uap3:Properties>
          </uap3:AppExtension>
        </uap3:Extension>
        
        <uap3:Extension Category="windows.appExtension">
          <uap3:AppExtension Name="microsoft.gameBarUIExtension"
                         Id="GameBarBrowserSettings"
                         DisplayName="Browser - Settings"
                         Description="Configure your Browser."
                         PublicFolder="GameBar">
            <uap3:Properties>
              <!--When creating your settings widget, be sure to set its type to "Settings" -->
              <GameBarWidget Type="Settings">
                <Window>
                  <Size>
                    <Height>300</Height>
                    <Width>300</Width>
                    <MinHeight>100</MinHeight>
                    <MinWidth>100</MinWidth>
                    <MaxHeight>Infinite</MaxHeight>
                    <MaxWidth>Infinite</MaxWidth>
                  </Size>
                </Window>
              </GameBarWidget>
            </uap3:Properties>
          </uap3:AppExtension>
        </uap3:Extension>

        <uap3:Extension Category="windows.appExtension">
          <uap3:AppExtension Name="microsoft.gameBarUIExtension"
                             Id="GameBarBrowserLibrary"
                             DisplayName="Browser - Library"
                             Description="View your favourites and history."
                             PublicFolder="GameBar">
            <uap3:Properties>
              <GameBarWidget Type="Standard">
                <HomeMenuVisible>false</HomeMenuVisible>
                <PinningSupported>false</PinningSupported>
                <ActivateAfterInstalled>false</ActivateAfterInstalled>
                <Window>
                  <Size>
                    <Height>540</Height>
                    <Width>960</Width>
                    <MinHeight>100</MinHeight>
                    <MinWidth>100</MinWidth>
                    <MaxHeight>Infinite</MaxHeight>
                    <MaxWidth>Infinite</MaxWidth>
                  </Size>
                  <ResizeSupported>
                    <Horizontal>true</Horizontal>
                    <Vertical>true</Vertical>
                  </ResizeSupported>
                </Window>
              </GameBarWidget>
            </uap3:Properties>
          </uap3:AppExtension>
        </uap3:Extension>
      </Extensions>
    </Application>

  </Applications>

